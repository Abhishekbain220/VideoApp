<%-include("./partials/header")%>
<div class="h-[100%] w-[100%] bg-black flex justify-center items-center">
    <a class="absolute left-[5%] top-[5%] text-white text-xl font-bold " href="/">Back</a>
    <h1 class="absolute  top-[10%] left-[50%] translate-x-[-50%] text-4xl font-bold text-white">Login Page</h1>
    <form class=" justify-end w-[40%] h-max bg-black  flex flex-col items-center justify-center" action="/login"  method="post">

        

        <input class=" bg-stone-700 text-white font-bold w-[100%] border-white border-[1px] p-2.5 pl-6 rounded-[50px]   " type="text" name="username" placeholder="Enter Username"  id=""> <br>

        

        <input class=" bg-stone-700 text-white font-bold w-[100%] border-white border-[1px] p-2.5 pl-6 rounded-[50px]   " type="password" name="password" placeholder="Enter Password"  id=""> <br>
        
        
        
        <button class="border-[1px] border-white text-white py-2 px-4 rounded-[50px] font-bold hover:bg-white hover:text-black " >Login</button>
    </form>
    <div class="w-[40%] h-max absolute text-white items-center  top-[65%] flex ">
        <p class="text-stone-400">Don't have an account?</p>
        <a class="ml-2" href="/register">Register</a>
    </div>
</div>
<%-include("./partials/footer")%>