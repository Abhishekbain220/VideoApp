<%-include("./partials/header")%>
<div class="h-[100%] w-[100%] bg-black flex justify-center items-center">
    <a class="absolute left-[5%] top-[5%] text-white text-xl font-bold " href="/">Back</a>
    <h1 class="absolute  top-[10%] left-[50%] translate-x-[-50%] text-4xl font-bold text-white">Reset User Password Page</h1>
    <form class=" justify-end w-[40%] h-max bg-black  flex flex-col items-center justify-center" action="/reset_password/<%=user._id%>"  method="post">

        

        <input class=" bg-stone-700 text-white font-bold w-[100%] border-white border-[1px] p-2.5 pl-6 rounded-[50px]   " type="text" name="oldpassword" placeholder="Enter Old Password"  id=""> <br>

        

        <input class=" bg-stone-700 text-white font-bold w-[100%] border-white border-[1px] p-2.5 pl-6 rounded-[50px]   " type="password" name="newpassword" placeholder="Enter New Password"  id=""> <br>
        
        
        
        <button class="border-[1px] border-white text-white py-2 px-4 rounded-[50px] font-bold hover:bg-white hover:text-black " >Reset</button>
    </form>
    
</div>
<%-include("./partials/footer")%>